{% extends 'Menu.html.twig' %}
{% block contenido %}
<div class="container">
    <section class="form">
        <h2 id="titulo">Modificar Articulo</h2>
        <form action="../Controller/Modificar.php" method="post">
            <div class="form-group">
            <h4>Titulo:</h4>
            <input class="form-control" type="text" name="tituloM" value="{{titulo}}" autofocus>
            </div>
            <div class="form-group">
            <h4>Descripcion:</h4>
            <textarea class="form-control" name="articuloM" value="{{articulo}}">{{articulo}}</textarea>
            </div>
            <div class="form-group">
            Autor: 
            <input class="form-control" type="text" name="autorM" value="{{autor}}">
            </div>
            <div class="form-group">
            Categoria:
            <input class="form-control" type="text" name="categoriaM" value="{{categoria}}">
            </div>
            <input type="hidden" name="idM" value="{{id}}">
            <input class="btn btn-primary" type="submit" name="modificar" value="Modificar">
        </form>
    </section>
</div>
{% endblock contenido %}